<!-- Hero Start -->
<section id="hero">
  <div class="fs-hero" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path @home.hero1_image1 %>')">
    <% if current_user && current_user.admin? %>
      <%= link_to "FAQ", pages_faq_path, class: "btn btn-white btn-md" %>
      <%= link_to "Editer la page", edit_home_path(@home), class: "btn btn-white btn-md" %>
      <%= link_to "Logout", destroy_user_session_path, class: "btn btn-white btn-danger" %>
    <% else %>
     <%= link_to('Login', new_user_session_path)  %>
    <% end %>
    <div class="hero-caption center-left text-white">
      <h2><%= sanitize @titre, tags: %w(strong em a), attributes: %w(href)%></h2>
      <p class="mrg-top-30"><%= sanitize @sous_titre, tags: %w(strong em a), attributes: %w(href) %></p>
      <div class="mrg-top-30">
        <a class="btn btn-white btn-md"><%= sanitize @cta, tags: %w(strong em a), attributes: %w(href) %></a>
      </div>
    </div>
  </div>
</section>
<!-- Hero End -->

