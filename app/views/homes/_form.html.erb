                <h4 class="features-tittle"><%= f.text_area :titre1_bloc1, class: 'editable' %></h4>
                <p><%= f.text_area :texte1_bloc1, class: 'editable' %></p>
              </div><!-- /features-info -->
            </div><!-- /features-block-3 -->
          </div>
          <div class="col-md-4">
            <div class="features-block-3">
              <i class="ei ei-folder-check"></i>
