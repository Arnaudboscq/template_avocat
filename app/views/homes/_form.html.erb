      </div><!-- /hero-img -->
    </section>
        <!-- Hero End -->

    <section class="section-1 bg-gray">
      <div class="container">
        <div class="row">
          <div class="col-md-4">
            <div class="features-block-3">
              <i class="ei ei-insurance"></i>
