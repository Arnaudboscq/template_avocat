              <i class="ei ei-pencil"></i>
              <div class="features-info">
                <h4 class="features-tittle"><%= f.text_area :titre3_bloc1, class: 'editable' %></h4>
                <p><%= f.text_area :texte3_bloc1, class: 'editable' %></p>
